<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/loginImage"
        android:layout_width="141dp"
        android:layout_height="134dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:cropToPadding="false"
        android:src="@drawable/login_icon" />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/text_color"
        android:textSize="27sp"
        android:layout_below="@id/loginImage"
        android:layout_centerInParent="true" />

    <android.support.v7.widget.CardView
        android:id="@+id/loginCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLogin"
        android:layout_centerHorizontal="true"
        android:layout_margin="24dp"
        app:cardBackgroundColor="@color/color_white">

        <RelativeLayout
            android:id="@+id/underInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Email"
                android:theme="@style/EditTextTheme"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:imeOptions="actionDone"
                android:textColorHint="@color/light_text"
                android:textColor="@color/main_edit"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:padding="8dp" />

            <EditText
                android:id="@+id/editPass"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:hint="Password"
                android:inputType="textPassword"
                android:theme="@style/EditTextTheme"
                android:maxLines="1"
                android:layout_below="@+id/editEmail"
                android:textColorHint="@color/light_text"
                android:imeOptions="actionDone"
                android:textColor="@color/main_edit"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="12dp"
                android:padding="8dp" />

            <Button
                android:id="@+id/eye"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_alignEnd="@+id/editPass"
                android:layout_alignTop="@+id/editPass"
                android:background="@drawable/ic_remove_red_eye_black_24dp" />

            <TextView
                android:id="@+id/errortxt"
                android:layout_below="@+id/editPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="24dp"
                android:textColor="@android:color/holo_red_light" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>


    <Button
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginCard"
        android:layout_centerInParent="true"
        android:layout_marginTop="24dp"
        android:background="@color/text_color"
        android:onClick="onClick"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/color_white" />


</RelativeLayout>
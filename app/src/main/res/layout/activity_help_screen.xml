<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context="mapp.com.sg.mapp_ca1.HelpScreen">

    <android.support.v7.widget.Toolbar
        android:id="@+id/helpToolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/main_edit"
        app:contentInsetStartWithNavigation="0dp"
        app:title="FAQ"
        app:titleTextAppearance="@style/Toolbar.TitleText" />

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/helpToolBar"
        android:layout_margin="@dimen/activity_minor_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:padding="@dimen/activity_minor_margin">

            <TextView
                android:id="@+id/qn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is this application?"
                android:textColor="@color/text_color"
                android:textSize="@dimen/home_textsize" />

            <View
                android:id="@+id/viewSep1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_minor_margin"
                android:layout_marginBottom="@dimen/activity_minor_margin"
                android:layout_below="@+id/qn1"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/ans1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewSep1"
                android:padding="@dimen/activity_minor_margin"
                android:text="@string/helpWHAT"
                android:textColor="@color/dark_text"
                android:textSize="18sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card1"
        android:layout_margin="@dimen/activity_minor_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:padding="@dimen/activity_minor_margin">

            <TextView
                android:id="@+id/qn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why does this page look so low quality?"
                android:textColor="@color/text_color"
                android:textSize="@dimen/home_textsize" />

            <View
                android:id="@+id/viewSep2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/activity_minor_margin"
                android:layout_marginBottom="@dimen/activity_minor_margin"
                android:layout_below="@+id/qn2"
                android:background="@color/light_grey" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/viewSep2"
                android:text="@string/ans2"
                android:textAlignment="textStart"
                android:textColor="@color/dark_text"
                android:textSize="18sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>

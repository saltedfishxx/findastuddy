<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="141dp"
            android:layout_height="134dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:cropToPadding="false"
            android:src="@drawable/ic_person_add_black_24dp" />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginImage"
            android:layout_centerInParent="true"
            android:text="Sign Up"
            android:textColor="@color/text_color"
            android:textSize="27sp" />

        <android.support.v7.widget.CardView
            android:id="@+id/loginCard"
            app:cardBackgroundColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLogin"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp">


            <LinearLayout
                android:id="@+id/underInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginCard"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_centerInParent="true"
                    android:text="Sign Up"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />
                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/color_splash"
                    android:hint="Email"
                    android:padding="8dp"
                    android:textColor="@color/main_edit"
                    android:textColorHint="@color/main_edit" />

                <EditText
                    android:id="@+id/editPass"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/color_splash"
                    android:hint="Password"
                    android:padding="8dp"
                    android:textColor="@color/main_edit"
                    android:textColorHint="@color/main_edit" />

                <EditText
                    android:id="@+id/editUsername"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/color_splash"
                    android:hint="Username"
                    android:padding="8dp"
                    android:textColor="@color/main_edit"
                    android:textColorHint="@color/main_edit" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/educationCard"
            app:cardBackgroundColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLogin"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp">


            <LinearLayout
                android:id="@+id/underInput2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/educationCard"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_centerInParent="true"
                    android:text="Education level"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="24dp"
                        android:text="Secondary"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="24dp"
                        android:text="JC/MI"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        //secondary
        <android.support.v7.widget.CardView
            android:id="@+id/streamCard"
            app:cardBackgroundColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLogin"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp">


            <LinearLayout
                android:id="@+id/underInput3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/streamCard"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_centerInParent="true"
                    android:text="Stream"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="24dp"
                        android:text="Express"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="16dp"
                        android:text="Normal (Academic)"/>
                </LinearLayout>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="24dp"
                    android:text="Normal (Technical)"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginCard"
            android:layout_centerInParent="true"
            android:layout_marginTop="24dp"
            android:background="#ff9b9b"
            android:onClick="onClick"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/color_white" />


    </RelativeLayout>
</ScrollView>
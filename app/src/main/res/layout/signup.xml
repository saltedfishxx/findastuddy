<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/signupLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="141dp"
            android:layout_height="134dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:cropToPadding="false"
            android:src="@drawable/ic_person_add_black_24dp" />

        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginImage"
            android:layout_centerInParent="true"
            android:text="Sign Up"
            android:textColor="@color/text_color"
            android:textSize="27sp" />

        <!-- email details -->
        <android.support.v7.widget.CardView
            android:id="@+id/loginCard"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtLogin"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@color/color_white">


            <LinearLayout
                android:id="@+id/underInput"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginCard"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Sign Up"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="24dp"
                    android:backgroundTint="@color/main_edit"
                    android:hint="Email"
                    android:padding="8dp"
                    android:textColor="@color/main_edit"
                    android:textColorHint="@color/light_text" />

                <EditText
                    android:id="@+id/editPass"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="@color/main_edit"
                    android:hint="Password"
                    android:padding="8dp"
                    android:textColor="@color/main_edit"
                    android:textColorHint="@color/light_text" />

                <EditText
                    android:id="@+id/editUsername"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/main_edit"
                    android:hint="Username"
                    android:padding="8dp"
                    android:textColor="@color/main_edit"
                    android:textColorHint="@color/light_text" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- education -->
        <android.support.v7.widget.CardView
            android:id="@+id/educationCard"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginCard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/color_white">


            <LinearLayout
                android:id="@+id/underInput2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Education level"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/RGEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/secondaryRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="24dp"
                        android:text="Secondary" />

                    <RadioButton
                        android:id="@+id/jcRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="40dp"
                        android:layout_marginTop="24dp"
                        android:text="JC/MI" />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- stream secondary -->
        <android.support.v7.widget.CardView
            android:id="@+id/streamCard"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/educationCard"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@color/color_white">


            <LinearLayout
                android:id="@+id/underInput3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Stream"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/RGStream"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/expressRB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Express" />

                        <RadioButton
                            android:id="@+id/normalARB"
                            android:layout_width="108dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Normal (Academic)" />

                    <RadioButton
                        android:id="@+id/normalTRB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="24dp"
                        android:text="Normal (Technical)" />


                </RadioGroup>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--secondary card-->
        <android.support.v7.widget.CardView
            android:id="@+id/secondaryYearCard"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/streamCard"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@color/color_white">

            <LinearLayout
                android:id="@+id/underInput4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/streamCard"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Current Year of Study"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/RGsecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/sec1RB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Secondary 1" />

                        <RadioButton
                            android:id="@+id/sec2RB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Secondary 2" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Secondary 3" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Secondary 4" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="24dp"
                        android:text="Secondary 5" />

                </RadioGroup>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- stream jc -->
        <android.support.v7.widget.CardView
            android:id="@+id/streamJCCard"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/educationCard"
            android:layout_centerHorizontal="true"
            android:layout_margin="24dp"
            app:cardBackgroundColor="@color/color_white">


            <LinearLayout
                android:id="@+id/underInput33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Stream"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/RGStreamJC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/artRB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Art" />

                        <RadioButton
                            android:id="@+id/scienceARB"
                            android:layout_width="108dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Science" />


                </RadioGroup>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!-- jc card-->
        <android.support.v7.widget.CardView
            android:id="@+id/jcYearCard"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/streamJCCard"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@color/color_white">

            <LinearLayout
                android:id="@+id/underInput5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"
                    android:text="Current Year of Study"
                    android:textColor="@color/text_color"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/RGjc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Year 1" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="24dp"
                            android:layout_marginTop="24dp"
                            android:text="Year 2" />
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="24dp"
                        android:layout_marginTop="24dp"
                        android:text="Year 3" />
                </RadioGroup>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="1324dp">


        </LinearLayout>
        <LinearLayout
            android:id="@+id/termsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/space"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbTerms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I agree to the " />

            <TextView
                android:id="@+id/terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Terms and Conditions"
                android:textColor="@color/text_color" />

        </LinearLayout>
        <Button
            android:id="@+id/signupbtn"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/termsLayout"
            android:layout_centerInParent="true"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="24dp"
            android:background="#ff9b9b"
            android:onClick="onClick"
            android:text="Sign up"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/color_white" />
    </RelativeLayout>
</ScrollView>